{
  "name": "presence",
  "version": "0.1.0",
  "description": "Mentorship with Memory",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "setup-db": "node -e \"import('./memory/setup.js').then(m => { m.setupDatabase(); console.log('Database initialised.'); })\"",

  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@hapi/boom": "^10.0.0",
    "@whiskeysockets/baileys": "^6.7.16",
    "better-sqlite3": "^11.7.0",
    "dotenv": "^16.4.7",
    "node-cron": "^3.0.3",
    "qrcode-terminal": "^0.12.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
